    <script>
        document.getElementById('tickerForm').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent form from submitting normally
        const inputValue = document.getElementById('filingInput').value; // Get input value
        if (inputValue) {
            const newUrl = `${window.location.origin}/filings/${inputValue}`; // Construct the new URL
            window.location.href = newUrl; // Redirect to the new URL
