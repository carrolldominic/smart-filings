<div id="hoverButtons">
  <button id="hoverButtonSimilar" class="btn btn-sm btn-success"><i class="bi-search"></i> View Similar Tables</button>
  <button id="hoverButtonDownload" class="btn btn-sm btn-primary"><i class="bi-file-earmark-spreadsheet-fill"></i> Download</button>
</div>

<style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
        }
        .container {
            display: flex;
            height: 100vh; /* Full viewport height */
        }
        .view-frame {
            width: 80%; /* Takes up 80% of the width */
            height: 100%; /* Full height */
            border: none;
            overflow-y: scroll;
        }
        .sidebar {
            width: 20%; /* Takes up 20% of the width */
            background-color: #f4f4f4;
            height: 100%; /* Full height */
            padding: 10px;
            box-sizing: border-box;
        }
</style>

